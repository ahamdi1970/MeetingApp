<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/reunionColor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/presence_online" />

    <TextView
        android:id="@+id/item_list_reunion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:hint="ma RÃ©union - Heure - salle"
        app:layout_constraintBottom_toBottomOf="@+id/reunionColor"
        app:layout_constraintStart_toEndOf="@+id/reunionColor"
        app:layout_constraintTop_toTopOf="@+id/reunionColor" />

    <TextView
        android:id="@+id/item_list_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textStyle="normal"
        android:hint="emails"
        app:layout_constraintTop_toBottomOf="@+id/item_list_reunion"
        app:layout_constraintStart_toEndOf="@+id/reunionColor"
        />


    <ImageButton
        android:id="@+id/item_list_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/item_list_reunion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_list_reunion"
        app:srcCompat="@drawable/ic_delete_white_24dp" />



</androidx.constraintlayout.widget.ConstraintLayout>