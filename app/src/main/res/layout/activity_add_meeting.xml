<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context="com.openclassrooms.mareu.ui.meeting_list.AddMeetingActivity">


    <EditText
        android:id="@+id/nomReunion"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/sujetReunion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="sujet Réunion"
         />

    <EditText
        android:id="@+id/et_mailInvites"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/tv_mailsInvites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mails Invités"
        android:inputType="phone" />

    <EditText
        android:id="@+id/et_dateReunion"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/tv_dateReunion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/date_de_reunion"
        android:inputType="text" />

    <Button
        android:id="@+id/button_date_picker"
        android:layout_width="139dp"
        android:layout_height="55dp"
        android:layout_marginEnd="36dp"
        android:text="@string/date_de_reunion"
        app:layout_constraintTop_toBottomOf="@id/tv_mailsInvites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_mailsInvites" />

    <EditText
        android:id="@+id/et_hourReunion"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/tv_hourReunion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Heure de réunion"
        android:inputType="text" />

    <Button
        android:id="@+id/button_hour_picker"
        android:layout_width="139dp"
        android:layout_height="55dp"
        android:layout_marginEnd="36dp"
        android:text="Heure de Réunion"
        app:layout_constraintTop_toBottomOf="@id/tv_hourReunion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_dateReunion" />


    <TextView
        android:id="@+id/tv_room"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="18dp"
        android:text="Salle de réunion :"
        app:layout_constraintTop_toBottomOf="@id/button_hour_picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_hour_picker"/>

    <EditText
        android:id="@+id/et_room"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autofillHints=""
         />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:ems="15"
        android:hint="@string/meeting_room"
        android:inputType="textMultiLine"
        android:lines="5"
        android:minLines="5"
        app:layout_constraintTop_toBottomOf="@id/tv_room"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_room"/>

    <Button
        android:id="@+id/createButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="Save"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/spinner1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner1"/>
</LinearLayout>